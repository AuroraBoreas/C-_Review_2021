<Window x:Class="MyWPFApp.MainWindo"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Fun with Panels!"
Height="285"
Width="325">

    <Button x:Name="btnMyButton" Height="121" Width="156" Content="btnMyButton_Click"/>
        <Button.Content>
            <StackPanel Height="95" Width="128" Orientation="Vertical">
                <Ellipse Fill="Red" Width="52" Height="45" Margin="5" />
                <Label Width="59" FontSize="20" Context="Click!" Height="36"/>
            </StackPanel>
        </Button.Content>
    </Button>


</Window>
